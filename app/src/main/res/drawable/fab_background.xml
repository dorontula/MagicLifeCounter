<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <ripple android:color="@color/fab_color_checked_muted">
            <item>
                <shape>
                    <solid android:color="@color/fab_color_checked" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="@color/fab_color_muted">
            <item>
                <shape>
                    <solid android:color="@color/fab_color" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>